# Kalshi API Configuration
KALSHI_API_BASE=https://demo-api.kalshi.co/trade-api/v2
KALSHI_WS_URL=wss://demo-api.kalshi.co/trade-api/ws/v2
KALSHI_POLL_INTERVAL_SECONDS=5
KALSHI_REQUEST_TIMEOUT_SECONDS=10
KALSHI_MAX_RETRIES=3

# Kalshi Authentication (for production API)
# Get your API key from: https://kalshi.com/account/api-keys
KALSHI_API_KEY_ID=your_key_id_here
KALSHI_PRIVATE_KEY_PATH=/path/to/private_key.pem  # or use KALSHI_PRIVATE_KEY with the key contents

# Account Integration (Phase 1)
# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_SECRET_KEY=your_fernet_key_here

# JWT Session Management
# Generate secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (overridden by docker-compose for containers)
DB_URL=postgresql+asyncpg://kalshi:kalshi@localhost:5432/kalshi  # pragma: allowlist secret
